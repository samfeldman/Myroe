<div class="content">
	<h2>Settings</h2>
	<ul>
		<%= form_for @current_user do |f| %>
			<li>username: <%= f.text_field :username %></li>
			<li>zipcode: <%= f.text_field :zipcode %></li>
			<li>email: <%= f.email_field :email %></li>
			<li>password: <%= f.password_field :password %></li>
			<li>confirm: <%= f.password_field :password_confirmation %></li>
			<li><%= f.submit "update" %></li>
			<li class="delete_user">
				<%= link_to ("delete user"), "/users/#{ @current_user.id }", method: :delete %></li>
		<% end %>
	</ul>
	<%= flash[:alert] if flash[:alert] %>
	<%= flash[:notice] if flash[:notice] %>
</div>